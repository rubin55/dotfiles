{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "yaml-ls": {
      "disabled": true
    },
    "helm": {
      "command": ["helm_ls", "serve"],
      "extensions": [".yaml"]
    }
  },
  "permission": {
    "*": "ask",
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "todoread": "allow"
  }
}

