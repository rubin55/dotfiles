// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "auto_update": false,
  "buffer_font_family": "PragmataPro",
  "buffer_font_size": 15,
  "buffer_font_weight": 500,
  "buffer_line_height": "standard",
  "cursor_shape": "block",
  "hard_tabs": false,
  "soft_wrap": "editor_width",
  "ui_font_family": "Ubuntu",
  "ui_font_size": 16,
  "ui_font_weight": 400,
  "vim_mode": false,
  "wrap_guides": [80, 120],

  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "deepcoder:latest"
    },
    "version": "2",
    "enabled": true,
    "button": true
  },

  "assistant_v2": {
    "enabled": true,
    "button": true
  },

  "chat_panel": {
    "button": "never"
  },

  "collaboration_panel": {
    "button": false
  },

  "features": {
    "copilot": false,
    "edit_prediction_provider": "none"
  },

  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ],
    "Dockerfile": ["Dockerfile", "Dockerfile.*", "*.Dockerfile"],
    "Groovy": ["*.groovy"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "Shell Script": [".bash_functions"]
  },

  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },

  "indent_guides": {
    "enabled": false,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },

  "project_panel": {
    "scrollbar": {
      "show": "never"
    }
  },

  "languages": {
    "Ansible": {
      "language_servers": ["ansible"]
    },
    "Dockerfile": {
      "language_servers": ["dockerfile-language-server"]
    },
    "Elixir": {
      "language_servers": ["lexical", "!elixir-ls", "!next-ls"]
    },
    "Groovy": {
      "language_servers": ["groovy"]
    },
    "Helm": {
      "language_servers": ["helm"]
    },
    "Kotlin": {
      "language_servers": ["kotlin-language-server"]
    },
    "Python": {
      "language_servers": ["pylsp", "!pyright"]
    },
    "Svelte": {
      "language_servers": ["svelte-language-server"]
    }
  },

  "lsp": {
    "ansible": {
      "binary": {
        "path": "/usr/bin/ansible-language-server",
        "arguments": ["--stdio"]
      }
    },
    "dockerfile-language-server": {
      "binary": {
        "path": "/usr/bin/docker-langserver",
        "arguments": ["--stdio"]
      }
    },
    "groovy": {
      "binary": {
        "path": "/usr/bin/groovy-language-server"
      }
    },
    "helm": {
      "binary": {
        "path": "/usr/bin/helm_ls",
        "arguments": ["serve"]
      }
    },
    "kotlin-language-server": {
      "binary": {
        "path": "/usr/bin/kotlin-language-server"
      }
    },
    "metals": {
      "initialization_options": {
        "isHttpEnabled": true
      },
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true
          },
          "implicitArguments": {
            "enable": true
          },
          "implicitConversions": {
            "enable": true
          },
          "typeParameters": {
            "enable": true
          },
          "hintsInPatternMatch": {
            "enable": true
          }
        }
      }
    },
    "rust-analyzer": {
      "binary": {
        "path_lookup": true
      },
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "svelte-language-server": {
      "binary": {
        "path": "/usr/bin/svelteserver",
        "arguments": ["--stdio"]
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "customTags": ["!reference sequence"]
        }
      }
    }
  },

  "tabs": {
    "file_icons": true
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "terminal": {
    "alternate_scroll": "on",
    "blinking": "on",
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false,
      "title": false
    }
  },

  "theme": {
    "mode": "system",
    "dark": "Github Dark Dimmed",
    "light": "Github Light"
  },

  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic"
      }
    }
  }
}
