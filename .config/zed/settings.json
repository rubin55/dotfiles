{
  "auto_update": false,
  "buffer_font_family": "PragmataPro",
  "buffer_font_size": 15,
  "buffer_font_weight": 100,
  "buffer_line_height": "standard",
  "cursor_shape": "block",
  "hard_tabs": false,
  "middle_click_paste": true,
  "show_wrap_guides": true,
  "soft_wrap": "editor_width",
  "ui_font_family": "Ubuntu",
  "ui_font_size": 16,
  "ui_font_weight": 400,
  "vim_mode": false,
  "wrap_guides": [80, 120],

  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest",
    },
    "enabled": true,
    "button": true,
  },

  "auto_install_extensions": {
    "ansible": true,
    "astro": true,
    "clojure": true,
    "csharp": true,
    "cue": true,
    "cypher": true,
    "dart": true,
    "dockerfile": true,
    "elixir": true,
    "erlang": true,
    "fsharp": true,
    "groovy": true,
    "haskell": true,
    "helm": true,
    "html": true,
    "java": true,
    "kotlin": true,
    "lua": true,
    "make": true,
    "perl": true,
    "ruby": true,
    "scala": true,
    "scheme": true,
    "sql": true,
    "svelte": true,
    "swift": true,
    "toml": true,
    "xml": true,
    "zig": true,
  },

  "collaboration_panel": {
    "button": false,
  },

  "features": {
    "edit_prediction_provider": "none",
  },

  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml",
    ],
    "Dockerfile": ["Dockerfile", "Dockerfile.*", "*.Dockerfile"],
    "Groovy": ["*.groovy"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
    ],
    "Markdown": ["**/Project Notes/*"],
    "Shell Script": [".bash_functions"],
  },

  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000,
    },
  },

  "indent_guides": {
    "enabled": false,
    "coloring": "indent_aware",
    "background_coloring": "disabled",
  },

  "journal": {
    "path": "~",
    "hour_format": "hour24",
  },

  "project_panel": {
    "scrollbar": {
      "show": "never",
    },
  },

  "languages": {
    "Ansible": {
      "language_servers": ["ansible"],
    },
    "Dockerfile": {
      "language_servers": ["dockerfile-language-server"],
    },
    "Elixir": {
      "language_servers": ["elixir-ls", "!lexical", "!next-ls"],
    },
    "Groovy": {
      "language_servers": ["groovy"],
    },
    "Helm": {
      "language_servers": ["helm"],
    },
    "Kotlin": {
      "language_servers": ["kotlin-language-server"],
    },
    "Python": {
      "language_servers": ["pylsp", "!pyright"],
    },
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "!ruby-lsp"],
    },
    "Svelte": {
      "language_servers": ["svelte-language-server"],
    },
  },

  "lsp": {
    "ansible": {
      "binary": {
        "path": "/usr/bin/ansible-language-server",
        "arguments": ["--stdio"],
      },
    },
    "dockerfile-language-server": {
      "binary": {
        "path": "/usr/bin/docker-langserver",
        "arguments": ["--stdio"],
      },
    },
    "groovy": {
      "binary": {
        "path": "/usr/bin/groovy-language-server",
      },
    },
    "helm": {
      "binary": {
        "path": "/usr/bin/helm_ls",
        "arguments": ["serve"],
      },
    },
    "kotlin-language-server": {
      "binary": {
        "path": "/usr/bin/kotlin-language-server",
      },
    },
    "metals": {
      "initialization_options": {
        "isHttpEnabled": true,
      },
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true,
          },
          "implicitArguments": {
            "enable": true,
          },
          "implicitConversions": {
            "enable": true,
          },
          "typeParameters": {
            "enable": true,
          },
          "hintsInPatternMatch": {
            "enable": true,
          },
        },
      },
    },
    "rust-analyzer": {
      "binary": {
        "path": "/usr/bin/rust-analyzer",
      },
      "initialization_options": {
        "check": {
          "command": "clippy",
        },
        "completion": {
          "fullFunctionSignatures": {
            "enable": true,
          },
        },
        "hover": {
          "maxSubstitutionLength": null,
          "show": {
            "enumVariants": 100,
            "fields": 100,
          },
        },
      },
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": false,
        "formatting": true,
      },
      "settings": {
        "use_bundler": false,
      },
    },
    "svelte-language-server": {
      "binary": {
        "path": "/usr/bin/svelteserver",
        "arguments": ["--stdio"],
      },
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "customTags": ["!reference sequence"],
        },
      },
    },
  },

  "tabs": {
    "file_icons": true,
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },

  "terminal": {
    "alternate_scroll": "on",
    "blinking": "on",
    "line_height": "standard",
    "shell": {
      "with_arguments": {
        "program": "tmux",
        "args": ["new-session", "-A", "-s", "0"],
      },
    },
    "toolbar": {
      "breadcrumbs": false,
    },
  },

  "theme": {
    "mode": "system",
    "dark": "Catppuccin Frappé",
    "light": "Catppuccin Latte",
  },

  "theme_overrides": {
    "Catppuccin Frappé": {
      "editor.wrap_guide": "#c8ccd40d",
    },
  },
}
