// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "auto_update": false,
  "buffer_font_family": "PragmataPro",
  "buffer_font_size": 16,
  "buffer_font_weight": 500,
  "buffer_line_height": "standard",
  "cursor_shape": "block",
  "hard_tabs": false,
  "soft_wrap": "editor_width",
  "ui_font_family": "Ubuntu",
  "ui_font_size": 19,
  "ui_font_weight": 400,
  "vim_mode": false,
  "wrap_guides": [80, 120],

  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro"
    },
    "version": "2",
    "enabled": true,
    "button": true
  },

  "assistant_v2": {
    "enabled": true,
    "button": true
  },

  "chat_panel": {
    "button": "never"
  },

  "collaboration_panel": {
    "button": false
  },

  "features": {
    "copilot": false,
    "edit_prediction_provider": "none"
  },

  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },

  "indent_guides": {
    "enabled": false,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },

  "project_panel": {
    "scrollbar": {
      "show": "never"
    }
  },

  "tabs": {
    "file_icons": true
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "terminal": {
    "alternate_scroll": "on",
    "blinking": "on",
    "line_height": "standard",
    "toolbar": {
      "title": true
    }
  },

  "theme": {
    "mode": "system",
    "dark": "Github Dark",
    "light": "Github Light"
  },

  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic"
      }
    }
  },

  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path_lookup": true
      },
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "customTags": ["!reference sequence"]
        }
      }
    }
  }
}
