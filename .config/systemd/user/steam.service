[Unit]
Description=Steam
StartLimitIntervalSec=500
StartLimitBurst=5
After=graphical-session.target

[Service]
Type=simple
WorkingDirectory=%h/.local/share/Steam
ExecStart=/usr/bin/steam -forcedesktopscaling 2 -pipewire-dmabuf -silent
Restart=always
RestartSec=10s

[Install]
WantedBy=default.target
